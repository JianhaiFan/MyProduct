<?xml version="1.0" encoding="utf-8"?>
<com.xiaofan.product.adaptation.percent.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.xiaofan.product.adaptation.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="12.5%w"
        android:layout_height="wrap_content"
        android:background="@color/color_title_bar_bg"
       >

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="3%w"
            android:gravity="center"
            android:textSize="@dimen/yms_font_36_px"
            android:textColor="#ffffff"
            android:text="微信"/>

        <TextView
            android:id="@+id/tv_title_bar_msg_hint"
            android:layout_toRightOf="@+id/tv_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="(2)"/>

        <ImageView
            android:id="@+id/iv_title_bar_plus"
            android:layout_width="wrap_content"
            app:layout_widthPercent="18.5%w"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:background="@drawable/selector_title_bar_plus"
            android:padding="@dimen/yms_dimens_26.0_px"
            android:src="@drawable/img_title_bar_plus"/>

        <ImageView
            android:id="@+id/iv_title_bar_search"
            android:layout_toLeftOf="@+id/iv_title_bar_plus"
            android:layout_width="wrap_content"
            app:layout_widthPercent="12.5%w"
            android:layout_height="match_parent"
            android:padding="@dimen/yms_dimens_26.0_px"
            android:background="@drawable/selector_title_bar_search"
            android:src="@drawable/img_title_bar_search"/>

    </com.xiaofan.product.adaptation.percent.PercentRelativeLayout>

</com.xiaofan.product.adaptation.percent.PercentLinearLayout>