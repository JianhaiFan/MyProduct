<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    tools:context="com.xiaofan.product.MainActivity">

    <include
        android:id="@+id/pll_title_bar_root"
        layout="@layout/title_bar_main"
        />


    <Button
        android:id="@+id/bt_login"
        android:layout_width="@dimen/yms_dimens_200.0_px"
        android:layout_height="@dimen/yms_dimens_200.0_px"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/yms_dimens_20.0_px"
        android:textSize="@dimen/yms_font_32_px"
        android:text="登录"
        android:onClick="onLogin"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度条"
        android:id="@+id/bt_progress"
        android:layout_above="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:onClick="onProgress"/>

    <Button
        android:id="@+id/bt_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/yms_dimens_20.0_px"
        android:text="提供者"
        android:onClick="onProvider"
        />


</RelativeLayout>
