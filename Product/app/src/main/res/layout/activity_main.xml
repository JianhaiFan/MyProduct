<?xml version="1.0" encoding="utf-8"?>
<com.xiaofan.product.adaptation.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaofan.product.MainActivity">

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yms:layout_widthPercent="50%w"
        yms:layout_heightPercent="50%w"
        android:gravity="center"
        android:text="percent" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</com.xiaofan.product.adaptation.percent.PercentLinearLayout>
