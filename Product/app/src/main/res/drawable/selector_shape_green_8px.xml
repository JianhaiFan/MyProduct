<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按钮可使用，点击时显示的颜色-->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_8.0_px" />
            <solid android:color="@color/color_bg_green_normal_pressed"></solid>
        </shape>
    </item>
    <!--按钮不可用时显示的颜色-->
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/yms_dimens_8.0_px" />
            <solid android:color="@color/color_bg_green_not_enable"></solid>
        </shape>
    </item>
    <!--按钮可用时，默认显示的颜色-->
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_8.0_px" />
            <solid android:color="@color/color_bg_green_normal"></solid>
        </shape>
    </item>

</selector>
