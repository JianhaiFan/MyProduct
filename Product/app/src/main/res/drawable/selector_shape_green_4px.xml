<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击时显示的颜色-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_4.0_px" />
            <stroke android:width="@dimen/yms_dimens_1.0_px" android:color="@color/color_gray_divider" />
            <solid android:color="@color/color_green"></solid>
        </shape>
    </item>
    <!--选中时显示的颜色-->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_4.0_px" />
            <stroke android:width="@dimen/yms_dimens_1.0_px" android:color="@color/color_gray_divider" />
            <solid android:color="@color/color_green"></solid>
        </shape>
    </item>
    <!--默认显示的颜色-->
    <item>
        <shape>
            <corners android:radius="@dimen/yms_dimens_4.0_px" />
            <stroke android:width="@dimen/yms_dimens_1.0_px" android:color="@color/color_red" />
            <solid android:color="@color/color_green_normal"></solid>
        </shape>
    </item>

</selector>
