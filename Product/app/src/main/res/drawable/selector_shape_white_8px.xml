<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击时显示的颜色-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_8.0_px" />
            <solid android:color="@color/color_bg_white_normal_pressed"></solid>
        </shape>
    </item>
    <!--选中时显示的颜色-->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_8.0_px" />
            <solid android:color="@color/color_bg_white_normal_pressed"></solid>
        </shape>
    </item>
    <!--默认显示的颜色-->
    <item>
        <shape>
            <corners android:radius="@dimen/yms_dimens_8.0_px" />
            <solid android:color="@color/color_bg_white_normal"></solid>
        </shape>
    </item>

</selector>
